# 复制为 .env 并按需修改
ENV=dev
APP_NAME=ACGN咨询助手-API
DATABASE_URL=sqlite:///./app.db
JWT_SECRET=change-me-in-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
# 可选：合规/提示文案（例如拒绝盗版/破解请求时的说明）
CRISIS_HELP_TEXT=本服务不提供盗版下载、破解、激活码或绕过付费的内容；如需我可以提供 ACGN 作品信息与正规购买渠道方向。

# DeepSeek（大模型）配置
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_DEEP_THINK_MODEL=deepseek-reasoner

# Web Search（联网搜索，可选）
# 推荐：Serper（https://serper.dev/）
WEB_SEARCH_PROVIDER=serper
WEB_SEARCH_API_KEY=
WEB_SEARCH_TIMEOUT_SECONDS=12

# 系统管理员初始化（可选，建议仅在首次初始化使用）
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_USERNAME=admin

# SMTP（忘记密码 / 注册验证码发送）
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=ACGN咨询助手 <no-reply@localhost>
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# 发送验证码的冷却时间（秒）
PASSWORD_RESET_RESEND_SECONDS=60
REGISTER_RESEND_SECONDS=60

# Dev/Test：是否在接口响应里返回 debug_code（生产环境建议关闭）
# - true：即使未配置 SMTP，也会返回 debug_code 便于本地联调（不会真的发到邮箱）
# - false：必须配置 SMTP，验证码才会发送到真实邮箱
EMAIL_DEBUG_RETURN_CODE=true
