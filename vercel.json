{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [{ "src": "api/index.py", "use": "@vercel/python" }],
  "routes": [{ "src": "/(.*)", "dest": "api/index.py" }],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{tests/**,__tests__/**,**/__pycache__/**,**/*.pyc,.venv/**,.pytest_cache/**,app.db,test.db,uvicorn*.log}"
    }
  }
}
